<div id="<%= dom_id lead %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First:</strong>
    <%= lead.first %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last:</strong>
    <%= lead.last %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= lead.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= lead.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Street:</strong>
    <%= lead.street %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">City:</strong>
    <%= lead.city %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">State:</strong>
    <%= lead.state %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Zip:</strong>
    <%= lead.zip %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Home:</strong>
    <%= lead.home %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= lead.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lead", lead, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lead', edit_lead_path(lead), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
